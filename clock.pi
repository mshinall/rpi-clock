#!/usr/bin/python

import I2C_LCD_driver
import time

mylcd = I2C_LCD_driver.lcd()

def clearLcd():
	global mylcd
	mylcd.lcd_clear()

def updateLcd():
	clearLcd()
	mylcd.lcd_display_string(time.gmtime(), 1, 1)


try:
	updateLcd()

	while(True):
		#print("keypad: sleeping...")
		time.sleep(0.2)
except:
	#print("keypad: cleaning up")
	clearLcd()
