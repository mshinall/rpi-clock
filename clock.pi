#!/usr/bin/python

import I2C_LCD_driver
import time

mylcd = I2C_LCD_driver.lcd()

def clearLcd():
	global mylcd
	mylcd.lcd_clear()

def updateLcd():
	mylcd.lcd_display_string(time.strftime("%a, %d %b %Y", time.localtime()), 0, 1)
	mylcd.lcd_display_string(time.strftime("%H:%M:%S", time.localtime()), 0, 1)

try:
	updateLcd()
	while(True):
		time.sleep(0.2)
		updateLcd()
		
except:
	clearLcd()
